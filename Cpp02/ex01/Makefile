SRCS		=	srcs/Fixed.cpp srcs/main.cpp

OBJS		= ${SRCS:.cpp=.o}

RM			= rm -f

NAME		= ex01

CC			= clang++

CFLAGS		= -Wall -Wextra -Werror -std=c++98

all:		${NAME}

${NAME}:	${OBJS}
			@${CC} ${CFLAGS} -o ${NAME} ${OBJS}
			@echo "âœ… \033[32mCompilation Done, ./ex01 created.\033[0m"
			@echo "ðŸ‘‰ \033[33mTo check output run: ./ex01 > log;diff expected_output log\033[0m"

%.o: %.cpp
			@${CC} ${CFLAGS} -c $< -o $@

clean:		
			@${RM} ${OBJS}
			@echo "âœ… \033[32m.o files deleted.\033[0m"


fclean:		clean
			@${RM} ${NAME}
			@echo "âœ… \033[32mExecutable file deleted.\033[0m"

re:			clean all

.PHONY:		all clean fclean re
